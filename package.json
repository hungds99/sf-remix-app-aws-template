{
  "name": "sf-remix-app-aws-template",
  "version": "1.0.0",
  "description": "A template for building Shopify apps with AWS and Remix",
  "author": {
    "name": "Hung (Ethan) Dinh S.",
    "email": "dinhsyhung99@gmail.com",
    "url": "https://github.com/hungds99"
  },
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "tsc && remix build",
    "dev": "shopify app dev",
    "sst:dev": "sst dev",
    "sst:deploy": "sst deploy",
    "config:link": "shopify app config link",
    "config:push": "shopify app config push",
    "generate": "shopify app generate",
    "deploy": "shopify app deploy",
    "config:use": "shopify app config use",
    "env": "shopify app env",
    "start": "remix-serve build/index.js",
    "docker-start": "npm run setup && npm run start",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "shopify": "shopify",
    "graphql-codegen": "graphql-codegen",
    "prepare": "husky"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.490.0",
    "@aws-sdk/lib-dynamodb": "^3.490.0",
    "@remix-run/dev": "^2.0.0",
    "@remix-run/node": "^2.0.0",
    "@remix-run/react": "^2.0.0",
    "@remix-run/serve": "^2.0.0",
    "@shopify/app": "3.53.0",
    "@shopify/cli": "3.53.0",
    "@shopify/polaris": "^12.0.0",
    "@shopify/shopify-api": "^9.0.1",
    "@shopify/shopify-app-remix": "^2.3.0",
    "@shopify/shopify-app-session-storage-dynamodb": "^2.0.3",
    "isbot": "^4.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@remix-run/eslint-config": "^2.0.0",
    "@shopify/api-codegen-preset": "^0.0.1",
    "@shopify/app-bridge-types": "^0.0.3",
    "@types/eslint": "^8.56.2",
    "@types/node": "^20.6.3",
    "@types/react": "^18.2.31",
    "@types/react-dom": "^18.2.14",
    "aws-cdk-lib": "2.110.1",
    "constructs": "10.3.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^8.10.0",
    "husky": "^9.0.6",
    "lint-staged": "^15.2.0",
    "prettier": "2.8.8",
    "sst": "2.39.5",
    "typescript": "^5.2.2"
  },
  "workspaces": [
    "extensions/*"
  ],
  "trustedDependencies": [
    "@shopify/plugin-cloudflare"
  ],
  "lint-staged": {
    "**/*": "prettier. --check --ignore-unknown",
    "*.{js,ts}": "eslint --max-warnings 0 ."
  }
}
